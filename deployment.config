# Deployment Configuration for Trumps Dashboard

# Default Environment Settings
DEFAULT_ENVIRONMENT=dev

# Port Configuration
DEV_CLIENT_PORT=3000
DEV_SERVER_PORT=3001

STAGING_CLIENT_PORT=3003
STAGING_SERVER_PORT=3002

PROD_CLIENT_PORT=80
PROD_SERVER_PORT=5000

# Database Configuration
MONGODB_DEV_DB=trumps-dashboard-dev
MONGODB_STAGING_DB=trumps-dashboard-staging
MONGODB_PROD_DB=trumps-dashboard-production

# Docker Configuration
DOCKER_NETWORK=trumps-network
MONGODB_DOCKER_PORT=27017

# Security (Change these in production!)
DEFAULT_JWT_SECRET=dev-jwt-secret-change-in-production
DEFAULT_MONGO_PASSWORD=password123

# Backup Configuration
BACKUP_DIRECTORY=./backups
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRY_COUNT=3

# Build Configuration
BUILD_DIRECTORY=build
NODE_VERSION=18

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs